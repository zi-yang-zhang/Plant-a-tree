<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/post_info_scroller"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarTheme"
            android:background="@color/purple"
            android:navigationIcon="@drawable/ic_ab_up_white"
            ></android.widget.Toolbar>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/time_title_1"
                android:textSize="30dp"
                android:text="Getting time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <GridView
                android:id="@+id/gallery_content_1"
                android:layout_below="@+id/time_title_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="200dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/time_title_2"
                android:textSize="30dp"
                android:text="Getting time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <GridView
                android:id="@+id/gallery_content_2"
                android:layout_below="@+id/time_title_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="200dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>

        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/time_title_3"
                android:textSize="30dp"
                android:text="Getting time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <GridView
                android:id="@+id/gallery_content_3"
                android:layout_below="@+id/time_title_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnWidth="200dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>